{
  "exclude": [
    "./prisma/seeders",
    "./test",
    "./jest.config.ts"
  ],
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./build",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["config/*"],
      "@controllers/*": ["controllers/*"],
      "@domain/*": ["domain/*"],
      "@helpers/*": ["helpers/*"],
      "@middleware/*": ["middleware/*"],
      "@routers/*": ["routers/*"],
      "@services/*": ["services/*"],
    }
  },
  "ts-node": {
    "esm": true,
    "require": ["tsconfig-paths/register"]
  }
}
